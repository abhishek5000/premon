            <skinAttribution>true</skinAttribution>
            <brand>
                <name>
                    <![CDATA[
                        <img src='${site-root}/images/premon.png' />
                        <span>PreMOn</span>
                    ]]>
                </name>
                <href>${site-root}</href>
            </brand>
            <titleTemplate>%2$s | %1$s</titleTemplate>
            <toc>none</toc>
